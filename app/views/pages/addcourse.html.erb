
<ul class="list-inline intro-social-buttons">

<div class="intro-header">
        <li role="presentation" class="dropdown">
      <%= form_for :trip, url: {action: "show"}, html: {method: "get"} do |f| %>

  <%= f.select :university_id, options_for_select(@universities.collect { |u|
    [u.name.titleize, u.id] }, 1), {:include_blank=> "Üniversite Seç"}, { id: 'universities_select',class:'dropdown-toggle btn btn-default btn-lg disabled' } %>

  <%= f.select :id, options_for_select(@courses.collect { |c|
    [c.name.upcase, c.id] },0), {:include_blank=>"Ders Seç"}, { id: 'courses_select',class:'dropdown-toggle btn btn-default btn-lg' } %>


  <%= f.submit "Bul!" ,{class:'btn btn-default btn-lg',id:'find_button'}%>
  </li>
<% end %>

</div>
                        </ul>
                      <div class="row">
<div class="addcourse">
  <%=form_for :newcourse, url: {action: "createcourse"}, html:{method:"post"} do |f| %>
  <div class="form-group">
    <label for="email">Dersin Kodu:</label>
    <%=f.text_field :course_name,class:"form-control", id:'coursename',:placeholder=>"Ders kodunu giriniz",:onkeydown=>"dersekle()"%>
  </div>
  <div class="form-group">
    <label for="pwd">Okul Adı</label>

    <input type="email" class="form-control disabled"readonly=true id="email" value="<%=current_user.university.name%>">
  </div>
  <div class="form-group">
    <label for="pwd">Ekleyen</label>
    <input type="email" class="form-control" id="email" readonly=true value="<%=current_user.name %>">
  </div>

  <div class="form-group">
  <%=f.submit "EKLE", :id=>"tus", :style=>"float:right; margin-top:20px" ,:class=>"btn btn-success disabled"%>
</div>
<%end%>
</div>
</div>
