			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			                <%=f.text_field :random ,:class=>'form-control input-sm',placeholder:'Gönderilen sayıyı giriniz'%>
			    					</div>
			    				</div>
			    			</div>


			    			<%=f.submit 'Onayla',:class=>'btn btn-info btn-block'%>

			    		<%end%>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
